<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    android:elevation="10dp">

    <LinearLayout
        android:id="@+id/llTopic_Click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rect"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imCircle_performance"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/middle_circle"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:id="@+id/tvTopicNameNew"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="HTML"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#6C8D9E"
                android:text="Proficiency : "/>

            <TextView
                android:id="@+id/tvProficiency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#6C8D9E"/>

        </LinearLayout>







    </LinearLayout>

</androidx.cardview.widget.CardView>